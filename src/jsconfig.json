{
  "compilerOptions": {
    "checkJs": true,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",

    "types": ["@types/trusted-types"],

    "lib": ["DOM", "ESNext"],

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    "strict": true,
    "noImplicitAny": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "moduleDetection": "force"
  }
}
